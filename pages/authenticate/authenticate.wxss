.nav{
    display: flex;
    text-align: center;
    background-color: #fff;
    color: #bbb;
    font-size: 16px;
}
.nav text{
    position: relative;
    flex: 1;
    line-height: 104rpx;
}
.nav text::before{
    position: absolute;
    content: "";
    bottom: 0;
    left: 4%;
    width: 92%;
    height:2rpx;
    background-color: #fff;
}
.nav text:first-child::after{
    content: "";
    position: absolute;
    right: 0;
    top: 13%;
    width: 2rpx;
    height: 74%;
    background-color: #ddd;
}
.nav text.act{
    color: #777;
}
.nav text.act::before{
    background-color: #e84233;
}
.li{
    text-align: center;
    margin-bottom: 28rpx;
}
.select{
    height: 204rpx;
    overflow: hidden;
    position: relative;
    background-color: rgba(0,0,0,.3);
    background-position: center center;
    background-repeat: no-repeat;
    background-size: 30%;
}
