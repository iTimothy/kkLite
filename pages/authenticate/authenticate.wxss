.img,.up_tip{
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    display: block;
    width: 100%;
    object-fit: cover;
    z-index: 10;
}
.up_tip{
    width: 162rpx;
    height: 111rpx;
    left: 50%;
    margin-left: -81rpx;
    z-index: 8;
}
.tip{
    background-color: #fff;
    color: #bebebe;
    font-size: 14px;
    padding: 16rpx 0;
    border: 2rpx solid #d6d6d6;
}
.submit_btn{
    display: block;
    width: 100%;
    line-height: 100rpx;
    background: #fff;
    border:0 !important;
    margin: 0;
    padding: 0;
    font-size: 16px;
    color: #e84233;
    border-radius: 0;
}
.hover{
