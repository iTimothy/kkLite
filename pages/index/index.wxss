.position{
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  top:10rpx;
  padding: 10rpx 80rpx;
  border-radius: 1000px;
  z-index: 100;
  color: #fff;
  background-color: rgba(0, 0, 0, .4);
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
max-width:50%;

}
.position::before{
  content: "";
  position: absolute;
  left: 14rpx;
  top: 50%;
  margin-top:-20rpx; 
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background: transparent url(http://192.168.1.240/kkLite/asset/position.png) left center no-repeat;
  background-size: 100%;
}
.position::after{
  content: "";
  position: absolute;
  right: 14rpx;
  top: 50%;
  margin-top:-20rpx; 
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  background: transparent url(http://192.168.1.240/kkLite/asset/arrow-r.png) left center no-repeat;
  background-size: 100%;
}
